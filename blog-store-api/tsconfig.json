{
  "compilerOptions": {
    "target": "ES2020", // Modern JS output
    "module": "ESNext", // ES modules for npm consumption
    "moduleResolution": "Node", // Node-style module resolution
    "declaration": true, // Generate .d.ts files for types
    "declarationMap": true, // Optional: maps to source files
    "outDir": "dist", // Output folder
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allow default import from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Optional: allows importing JSON
    "skipLibCheck": true, // Skip type checking of node_modules
    "sourceMap": true, // Optional: useful for debugging
    "lib": [
      "ES2020",
      "DOM"
    ], // Modern JS + fetch API types
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}